@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chatbot-container">
    <div class="chat-window">
        <div id="chatContent" class="chat-content"></div>

        <div class="chat-input">
            <input type="text" id="inputPregunta" placeholder="Escribe un mensaje...">
            <button onclick="enviarPregunta()">
                <i class="bi bi-send-fill"></i>
            </button>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        function agregarMensaje(origen, texto) {
            const chat = document.getElementById("chatContent");

            let mensaje = document.createElement("div");
            mensaje.classList.add(origen === "Cliente" ? "msg-user" : "msg-bot");
            mensaje.innerText = texto;

            chat.appendChild(mensaje);
            chat.scrollTop = chat.scrollHeight;
        }

        function enviarPregunta() {
            const texto = document.getElementById("inputPregunta").value;
            if (!texto.trim()) return;

            agregarMensaje("Cliente", texto);

            fetch("/ChatBot/Responder?texto=" + encodeURIComponent(texto))
                .then(response => response.json())
                .then(data => agregarMensaje("ChatBot", data.respuesta));

            document.getElementById("inputPregunta").value = "";
        }
    </script>

    <style>
        .chatbot-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .chat-window {
            width: 350px;
            height: 480px;
            background: #ffffff;
            border-radius: 12px;
            border: 1px solid #cfd5e3;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .chat-content {
            flex: 1;
            overflow-y: auto;
            padding: 12px;
            background: #f4f6fb;
        }

        /* BURBUJA DEL BOT */
        .msg-bot {
            max-width: 75%;
            background: #e0e7ff;
            padding: 10px 14px;
            margin-bottom: 10px;
            border-radius: 12px 12px 12px 4px;
            color: #1e1e2f;
            font-size: 14px;
            animation: fade 0.25s ease;
        }

        /* BURBUJA DEL CLIENTE */
        .msg-user {
            max-width: 75%;
            background: #0d6efd;
            padding: 10px 14px;
            margin-bottom: 10px;
            margin-left: auto;
            border-radius: 12px 12px 4px 12px;
            color: white;
            font-size: 14px;
            animation: fade 0.25s ease;
        }

        @@keyframes fade {
            from

        {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .chat-input {
            display: flex;
            border-top: 1px solid #cfd5e3;
            padding: 8px;
            background: white;
        }

            .chat-input input {
                flex: 1;
                padding: 8px;
                border-radius: 8px;
                border: 1px solid #d4d7dd;
                outline: none;
            }

            .chat-input button {
                background: #0d6efd;
                color: white;
                border: none;
                margin-left: 8px;
                padding: 8px 12px;
                border-radius: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .chat-input button i {
                    font-size: 18px;
                }
    </style>

}

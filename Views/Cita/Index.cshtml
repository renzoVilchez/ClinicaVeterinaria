@{
    Layout = "_AdminLayout";
}

<h2>Citas</h2>

<button id="btnNuevo" class="btn btn-primary mb-2">Nueva Cita</button>

<table class="table table-striped" id="tblCitas">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Mascota</th>
            <th>Servicio</th>
            <th>Veterinario</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="citaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Cita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="IdCita" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Cliente</label>
                        <select id="IdCliente" class="form-select"></select>
                    </div>

                    <div class="col-md-6">
                        <label>Mascota</label>
                        <select id="IdMascota" class="form-select"></select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Servicio</label>
                        <select id="IdServicio" class="form-select"></select>
                    </div>

                    <div class="col-md-6">
                        <label>Veterinario</label>
                        <select id="IdVeterinario" class="form-select"></select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Fecha</label>
                        <input type="date" id="Fecha" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label>Hora</label>
                        <select id="Hora" class="form-select"></select>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button id="btnGuardar" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const modalEl = document.getElementById('citaModal');
            const bsModal = new bootstrap.Modal(modalEl);

            // ===============================
            // CARGAR COMBOS
            // ===============================
            async function cargarCombos() {
                try {
                    // Clientes
                    const clientes = await fetch('/Cliente/Listar').then(r => r.json());
                    document.getElementById('IdCliente').innerHTML =
                        clientes.map(c => `<option value="${c.idCliente}">${c.nombres} ${c.apellidoPaterno} ${c.apellidoMaterno}</option>`).join('');

                    // Mascotas vacías por defecto
                    document.getElementById('IdMascota').innerHTML = '';

                    // Servicios
                    const serv = await fetch('/Servicio/Listar').then(r => r.json());
                    document.getElementById('IdServicio').innerHTML =
                        serv.map(s => `<option value="${s.idServicio}">${s.nombreServicio}</option>`).join('');

                    // Veterinarios
                    const vet = await fetch('/Veterinario/Listar').then(r => r.json());
                    document.getElementById('IdVeterinario').innerHTML =
                        vet.map(v => `<option value="${v.idVeterinario}">${v.nombreUsuario}</option>`).join('');

                } catch (err) {
                    console.error('Error cargando combos:', err);
                }
            }

            // ===============================
            // FILTRAR MASCOTAS POR CLIENTE
            // ===============================
            document.getElementById('IdCliente').addEventListener('change', async function() {
                const idCliente = this.value;
                if(!idCliente) return;

                const mascotas = await fetch(`/Mascota/ListarPorCliente?idCliente=${idCliente}`).then(r => r.json());
                document.getElementById('IdMascota').innerHTML =
                    mascotas.map(m => `<option value="${m.idMascota}">${m.nombre}</option>`).join('');
            });

            // ===============================
            // FILTRAR HORARIOS POR VETERINARIO Y FECHA
            // ===============================
            document.getElementById('IdVeterinario').addEventListener('change', cargarHorasDisponibles);
            document.getElementById('Fecha').addEventListener('change', cargarHorasDisponibles);

            async function cargarHorasDisponibles() {
                const idVet = document.getElementById('IdVeterinario').value;
                const fecha = document.getElementById('Fecha').value;
                if(!idVet || !fecha) return;

                const horas = await fetch(`/Cita/HorariosDisponibles?idVeterinario=${idVet}&fecha=${fecha}`).then(r => r.json());
                document.getElementById('Hora').innerHTML =
                    horas.map(h => `<option value="${h}">${h}</option>`).join('');
            }

            // ===============================
            // LISTAR CITAS
            // ===============================
            async function fetchList() {
                const res = await fetch('/Cita/Listar');
                const data = await res.json();

                const tbody = document.querySelector('#tblCitas tbody');
                tbody.innerHTML = '';
                data.forEach(c => {
                    tbody.innerHTML += `
                    <tr>
                        <td>${c.idCita}</td>
                        <td>${c.clienteNombre || ''}</td>
                        <td>${c.mascotaNombre}</td>
                        <td>${c.servicioNombre}</td>
                        <td>${c.veterinarioNombre}</td>
                        <td>${c.fechaCita.split('T')[0]}</td>
                        <td>${c.horaCita}</td>
                        <td>
                            <button class="btn btn-sm btn-primary btn-edit" data-id="${c.idCita}">Editar</button>
                            <button class="btn btn-sm btn-danger btn-delete" data-id="${c.idCita}">Eliminar</button>
                        </td>
                    </tr>`;
                });
                bindButtons();
            }

            // ===============================
            // BOTONES EDIT / DELETE
            // ===============================
            function bindButtons() {
                document.querySelectorAll('.btn-edit').forEach(btn => {
                    btn.addEventListener('click', async e => {
                        await cargarCombos();
                        const id = e.target.dataset.id;
                        const res = await fetch(`/Cita/Obtener?id=${id}`);
                        const c = await res.json();

                        document.getElementById('IdCita').value = c.idCita;
                        document.getElementById('IdCliente').value = c.idCliente;
                        const event = new Event('change');
                        document.getElementById('IdCliente').dispatchEvent(event);
                        setTimeout(() => {
                            document.getElementById('IdMascota').value = c.idMascota;
                        }, 100);

                        document.getElementById('IdServicio').value = c.idServicio;
                        document.getElementById('IdVeterinario').value = c.idVeterinario;
                        document.getElementById('Fecha').value = c.fechaCita.split("T")[0];
                        cargarHorasDisponibles().then(() => {
                            document.getElementById('Hora').value = c.horaCita;
                        });

                        bsModal.show();
                    });
                });

                document.querySelectorAll('.btn-delete').forEach(btn => {
                    btn.addEventListener('click', async e => {
                        if (!confirm("¿Eliminar cita?")) return;
                        const id = parseInt(e.target.dataset.id);
                        const res = await fetch('/Cita/Eliminar', {
                            method:'POST',
                            headers:{'Content-Type':'application/json'},
                            body:JSON.stringify(id)
                        });
                        const json = await res.json();
                        if(json.success) fetchList();
                        else alert("Error al eliminar");
                    });
                });
            }

            // ===============================
            // NUEVA CITA
            // ===============================
            document.getElementById('btnNuevo').addEventListener('click', async () => {
                await cargarCombos();
                document.getElementById('IdCita').value = 0;
                document.getElementById('Fecha').value = '';
                document.getElementById('Hora').innerHTML = '';
                bsModal.show();
            });

            // ===============================
            // GUARDAR CITA
            // ===============================
            document.getElementById('btnGuardar').addEventListener('click', async () => {
                const cita = {
                    IdCita: parseInt(document.getElementById('IdCita').value || 0),
                    IdCliente: parseInt(document.getElementById('IdCliente').value),
                    IdMascota: parseInt(document.getElementById('IdMascota').value),
                    IdServicio: parseInt(document.getElementById('IdServicio').value),
                    IdVeterinario: parseInt(document.getElementById('IdVeterinario').value),
                    FechaCita: document.getElementById('Fecha').value,
                    HoraCita: document.getElementById('Hora').value
                };

                const res = await fetch('/Cita/Guardar', {
                    method:'POST',
                    headers:{'Content-Type':'application/json'},
                    body:JSON.stringify(cita)
                });

                const json = await res.json();
                if(json.success) {
                    bsModal.hide();
                    fetchList();
                } else {
                    alert("Error al guardar");
                }
            });

            // ===============================
            // CARGA INICIAL
            // ===============================
            fetchList();
        });
    </script>
}

@{
    Layout = "_AdminLayout";
}

<h2>Servicios</h2>

<button id="btnNuevo" class="btn btn-primary mb-2">Nuevo servicio</button>

<table class="table table-striped" id="tblServicios">
    <thead>
        <tr>
            <th>ID</th>
            <th>Servicio</th>
            <th>Descripción</th>
            <th>Precio (S/.)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="servicioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Servicio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" id="IdServicio" />

                <div class="mb-3">
                    <label>Nombre del servicio</label>
                    <input type="text" id="NombreServicio" class="form-control" />
                </div>

                <div class="mb-3">
                    <label>Descripción</label>
                    <textarea id="Descripcion" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label>Precio (S/.)</label>
                    <input type="number" step="0.01" id="Precio" class="form-control" />
                </div>

            </div>

            <div class="modal-footer">
                <button id="btnGuardar" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const modalEl = document.getElementById('servicioModal');
            const bsModal = new bootstrap.Modal(modalEl);

            // =========================
            // LISTAR SERVICIOS
            // =========================
            function fetchList() {
                fetch('/Servicio/Listar')
                    .then(r => r.json())
                    .then(data => {
                        const tbody = document.querySelector('#tblServicios tbody');
                        tbody.innerHTML = '';

                        data.forEach(s => {
                            tbody.innerHTML += `
                                <tr>
                                    <td>${s.idServicio}</td>
                                    <td>${s.nombreServicio}</td>
                                    <td>${s.descripcion}</td>
                                    <td>S/ ${s.precio.toFixed(2)}</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary btn-edit" data-id="${s.idServicio}">Editar</button>
                                        <button class="btn btn-sm btn-danger btn-delete" data-id="${s.idServicio}">Eliminar</button>
                                    </td>
                                </tr>`;
                        });

                        bindButtons();
                    });
            }

            // =========================
            // BOTONES EDITAR / ELIMINAR
            // =========================
            function bindButtons() {

                // EDITAR
                document.querySelectorAll('.btn-edit').forEach(btn => {
                    btn.addEventListener('click', async (e) => {
                        const id = e.target.dataset.id;

                        const res = await fetch(`/Servicio/Obtener?id=${id}`);

                        if (res.ok) {
                            const s = await res.json();

                            document.getElementById('IdServicio').value = s.idServicio;
                            document.getElementById('NombreServicio').value = s.nombreServicio;
                            document.getElementById('Descripcion').value = s.descripcion;
                            document.getElementById('Precio').value = s.precio;

                            bsModal.show();
                        }
                    });
                });

                // ELIMINAR
                document.querySelectorAll('.btn-delete').forEach(btn => {
                    btn.addEventListener('click', async (e) => {
                        if (!confirm('¿Eliminar servicio?')) return;

                        const id = parseInt(e.target.dataset.id);

                        const res = await fetch('/Servicio/Eliminar', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(id)
                        });

                        const json = await res.json();
                        if (json.success) fetchList();
                        else alert("No se pudo eliminar");
                    });
                });
            }

            // =========================
            // NUEVO SERVICIO
            // =========================
            document.getElementById('btnNuevo').addEventListener('click', () => {
                document.getElementById('IdServicio').value = 0;
                document.getElementById('NombreServicio').value = '';
                document.getElementById('Descripcion').value = '';
                document.getElementById('Precio').value = 0;

                bsModal.show();
            });

            // =========================
            // GUARDAR
            // =========================
            document.getElementById('btnGuardar').addEventListener('click', async () => {

                const servicio = {
                    IdServicio: parseInt(document.getElementById('IdServicio').value || 0),
                    NombreServicio: document.getElementById('NombreServicio').value,
                    Descripcion: document.getElementById('Descripcion').value,
                    Precio: parseFloat(document.getElementById('Precio').value)
                };

                const res = await fetch('/Servicio/Guardar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(servicio)
                });

                const json = await res.json();

                if (json.success) {
                    bsModal.hide();
                    fetchList();
                } else {
                    alert("Error al guardar");
                }
            });

            // CARGA INICIAL
            fetchList();
        });
    </script>
}

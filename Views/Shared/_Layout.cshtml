<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Veterinaria - ANIMORA</title>

    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <div class="logo">
            <img src="~/img/Logo.png" alt="Logo ANIMORA">
        </div>

        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-controller="Home" asp-action="Nosotros">Nosotros</a></li>
                <li><a asp-controller="Home" asp-action="Contacto">Contáctanos</a></li>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-top">
            <img src="~/img/logo.png" alt="Vetivet" class="footer-logo">

            <p class="footer-address">
                <i class="fas fa-map-marker-alt"></i>
                Av. España 123, Ciudad Trujillo
            </p>
        </div>

        <div class="footer-content">

            <div class="footer-column">
                <h3>Contáctanos</h3>
                <p><i class="fab fa-whatsapp"></i> Whatsapp: +51 959 - 060 - 6025</p>
                <p><i class="fas fa-envelope"></i> Email: contacto@animora.com</p>
            </div>

            <div class="footer-column">
                <h3>Legales</h3>
                <p><i class="fas fa-shield-alt"></i> Términos y Condiciones</p>
                <p><i class="fas fa-book"></i> Libro de reclamaciones</p>
                <p><i class="fas fa-file-contract"></i> Términos y Condiciones de promociones</p>
            </div>

            <div class="footer-column">
                <h3>Redes Sociales</h3>
                <p><i class="fab fa-facebook"></i> Facebook</p>
                <p><i class="fab fa-instagram"></i> Instagram</p>
                <p><i class="fab fa-tiktok"></i> Tiktok</p>
                <p><i class="fab fa-youtube"></i> Youtube</p>
            </div>

        </div>

        <div class="footer-bottom">
            <p>ANIMORA Clínica Veterinaria © Copyright 2025</p>
            <p>Trujillo, Perú</p>
            <p>Desarrollado por IESTP Trujillo</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)


    <!-- BOTÓN FLOTANTE DEL CHATBOT -->
    <a href="/ChatBot/Cliente" class="boton-chatbot">
        <i class="fas fa-robot"></i>
    </a>

    <style>
        .boton-chatbot {
            position: fixed;
            bottom: 25px;
            right: 25px;
            background: #0d6efd;
            color: white;
            font-size: 28px;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            box-shadow: 0px 3px 10px rgba(0,0,0,0.3);
            z-index: 9999;
        }

            .boton-chatbot:hover {
                background: #084298;
            }
    </style>

</body>
</html>

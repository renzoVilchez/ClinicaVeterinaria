@{
    Layout = "_AdminLayout";
}

<h2>Horarios de Veterinarios</h2>

<button id="btnNuevo" class="btn btn-primary mb-2">
    <i class="bi bi-plus-circle"></i> Nuevo horario
</button>

<table class="table table-striped table-hover" id="tblHorarios">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Veterinario</th>
            <th>Día Semana</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th>Disponible</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="horarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-clock-history"></i> Asignar Horario a Veterinario
                </h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" id="IdHorario" />

                <!-- Selección de Veterinario -->
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-person-badge"></i> Veterinario *
                    </label>
                    <select id="IdVeterinario" class="form-select" required>
                        <option value="">-- Seleccione un veterinario --</option>
                    </select>
                    <small class="text-muted">Seleccione el veterinario al que asignará el horario</small>
                </div>

                <!-- Día de la Semana -->
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="bi bi-calendar-week"></i> Día de la Semana *
                    </label>
                    <select id="DiaSemana" class="form-select" required>
                        <option value="">-- Seleccione un día --</option>
                        <option value="Lunes">Lunes</option>
                        <option value="Martes">Martes</option>
                        <option value="Miercoles">Miércoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sabado">Sábado</option>
                    </select>
                </div>

                <!-- Horarios -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-clock"></i> Hora Inicio *
                            </label>
                            <select id="HoraInicio" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-clock-fill"></i> Hora Fin *
                            </label>
                            <select id="HoraFin" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Estado Disponible -->
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input type="checkbox" id="Disponible" class="form-check-input" role="switch" checked />
                        <label class="form-check-label fw-bold">
                            <i class="bi bi-check-circle"></i> Horario Disponible para Citas
                        </label>
                    </div>
                    <small class="text-muted">Activa esta opción si el veterinario estará disponible en este horario</small>
                </div>

                <!-- Resumen Visual -->
                <div id="resumenHorario" class="alert alert-info d-none">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle"></i> Resumen del Horario:
                    </h6>
                    <p class="mb-0" id="textoResumen"></p>
                </div>

            </div>

            <div class="modal-footer">
                <button id="btnGuardar" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar Horario
                </button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const modalEl = document.getElementById('horarioModal');
            const bsModal = new bootstrap.Modal(modalEl);

            // ===========================
            // GENERAR OPCIONES DE HORAS
            // ===========================
            function generarOpcionesHoras() {
                const selectInicio = document.getElementById('HoraInicio');
                const selectFin = document.getElementById('HoraFin');

                selectInicio.innerHTML = '<option value="">-- Seleccione --</option>';
                selectFin.innerHTML = '<option value="">-- Seleccione --</option>';

                for (let i = 0; i <= 23; i++) {
                    const hora = i.toString().padStart(2, '0') + ':00';
                    selectInicio.innerHTML += `<option value="${i}">${hora}</option>`;
                    selectFin.innerHTML += `<option value="${i}">${hora}</option>`;
                }
            }

            // ===========================
            // ACTUALIZAR RESUMEN
            // ===========================
            function actualizarResumen() {
                const vetSelect = document.getElementById('IdVeterinario');
                const diaSelect = document.getElementById('DiaSemana');
                const horaInicio = document.getElementById('HoraInicio');
                const horaFin = document.getElementById('HoraFin');
                const disponible = document.getElementById('Disponible');

                if (vetSelect.value && diaSelect.value && horaInicio.value && horaFin.value) {
                    const vetNombre = vetSelect.options[vetSelect.selectedIndex].text;
                    const dia = diaSelect.value;
                    const inicio = horaInicio.value.padStart(2, '0') + ':00';
                    const fin = horaFin.value.padStart(2, '0') + ':00';
                    const estado = disponible.checked ? 'DISPONIBLE' : 'NO DISPONIBLE';

                    document.getElementById('textoResumen').innerHTML = `
                        <strong>${vetNombre}</strong> trabajará el día <strong>${dia}</strong>
                        de <strong>${inicio}</strong> a <strong>${fin}</strong>.
                        Estado: <span class="badge bg-${disponible.checked ? 'success' : 'secondary'}">${estado}</span>
                    `;
                    document.getElementById('resumenHorario').classList.remove('d-none');
                } else {
                    document.getElementById('resumenHorario').classList.add('d-none');
                }
            }

            // ===========================
            // LISTAR HORARIOS
            // ===========================
            function fetchList() {
                fetch('/HorariosVeterinario/Listar')
                    .then(r => r.json())
                    .then(data => {
                        const tbody = document.querySelector('#tblHorarios tbody');
                        tbody.innerHTML = '';

                        if (data.length === 0) {
                            tbody.innerHTML = `
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                        <p>No hay horarios asignados. Comienza agregando uno nuevo.</p>
                                    </td>
                                </tr>`;
                            return;
                        }

                        data.forEach(h => {
                            tbody.innerHTML += `
                                <tr>
                                    <td>${h.idHorario}</td>
                                    <td><strong>${h.nombreVeterinario}</strong></td>
                                    <td><span class="badge bg-info">${h.diaSemana || '-'}</span></td>
                                    <td>${h.horaInicio}:00</td>
                                    <td>${h.horaFin}:00</td>
                                    <td>
                                        <span class="badge bg-${h.disponible ? 'success' : 'secondary'}">
                                            ${h.disponible ? 'Sí' : 'No'}
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-warning btn-edit" data-id="${h.idHorario}">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>
                                        <button class="btn btn-sm btn-danger btn-delete" data-id="${h.idHorario}">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>`;
                        });

                        bindButtons();
                    })
                    .catch(err => {
                        console.error('Error al listar:', err);
                        alert('Error al cargar los horarios');
                    });
            }

            // ===========================
            // CARGAR SELECT DE VETERINARIOS
            // ===========================
            function cargarVeterinariosSelect() {
                const select = document.getElementById('IdVeterinario');
                select.innerHTML = '<option value="">-- Seleccione un veterinario --</option>';

                fetch('/HorariosVeterinario/ListarVeterinarios')
                    .then(r => r.json())
                    .then(veterinarios => {
                        veterinarios.forEach(vet => {
                            const option = document.createElement('option');
                            option.value = vet.idVeterinario;
                            option.textContent = `${vet.nombres} ${vet.apellidoPaterno} ${vet.apellidoMaterno}${vet.especialidad ? ' - ' + vet.especialidad : ''}`;
                                    select.appendChild(option);
                        });
                    })
                    .catch(err => {
                        console.error('Error al cargar veterinarios:', err);
                        alert('Error al cargar la lista de veterinarios');
                    });
            }

            // ===========================
            // BIND BOTONES
            // ===========================
            function bindButtons() {
                // EDITAR
                document.querySelectorAll('.btn-edit').forEach(btn => {
                    btn.addEventListener('click', async (e) => {
                        const id = e.target.closest('button').dataset.id;

                        cargarVeterinariosSelect();

                        const res = await fetch(`/HorariosVeterinario/Obtener?id=${id}`);
                        if (res.ok) {
                            const h = await res.json();

                            setTimeout(() => {
                                document.getElementById('IdHorario').value = h.idHorario;
                                document.getElementById('IdVeterinario').value = h.idVeterinario;
                                document.getElementById('DiaSemana').value = h.diaSemana || '';
                                document.getElementById('HoraInicio').value = h.horaInicio;
                                document.getElementById('HoraFin').value = h.horaFin;
                                document.getElementById('Disponible').checked = h.disponible;
                                actualizarResumen();
                                bsModal.show();
                            }, 300);
                        }
                    });
                });

                // ELIMINAR
                document.querySelectorAll('.btn-delete').forEach(btn => {
                    btn.addEventListener('click', async (e) => {
                        if (!confirm('¿Está seguro de eliminar este horario?\n\nEsta acción no se puede deshacer.')) return;

                        const id = parseInt(e.target.closest('button').dataset.id);
                        const res = await fetch('/HorariosVeterinario/Eliminar', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(id)
                        });

                        const json = await res.json();
                        if (json.success) {
                            fetchList();
                        } else {
                            alert("No se pudo eliminar el horario");
                        }
                    });
                });
            }

            // ===========================
            // NUEVO HORARIO
            // ===========================
            document.getElementById('btnNuevo').addEventListener('click', () => {
                document.getElementById('IdHorario').value = 0;
                document.getElementById('IdVeterinario').value = '';
                document.getElementById('DiaSemana').value = '';
                document.getElementById('HoraInicio').value = '';
                document.getElementById('HoraFin').value = '';
                document.getElementById('Disponible').checked = true;
                document.getElementById('resumenHorario').classList.add('d-none');

                cargarVeterinariosSelect();
                bsModal.show();
            });

            // ===========================
            // GUARDAR
            // ===========================
            document.getElementById('btnGuardar').addEventListener('click', async () => {
                const horario = {
                    IdHorario: parseInt(document.getElementById('IdHorario').value || 0),
                    IdVeterinario: parseInt(document.getElementById('IdVeterinario').value || 0),
                    DiaSemana: document.getElementById('DiaSemana').value,
                    HoraInicio: parseInt(document.getElementById('HoraInicio').value || 0),
                    HoraFin: parseInt(document.getElementById('HoraFin').value || 0),
                    Disponible: document.getElementById('Disponible').checked
                };

                // Validaciones
                if (horario.IdVeterinario === 0) {
                    alert('⚠️ Debe seleccionar un veterinario');
                    return;
                }
                if (!horario.DiaSemana) {
                    alert('⚠️ Debe seleccionar el día de la semana');
                    return;
                }
                if (!horario.HoraInicio && horario.HoraInicio !== 0) {
                    alert('⚠️ Debe seleccionar la hora de inicio');
                    return;
                }
                if (!horario.HoraFin && horario.HoraFin !== 0) {
                    alert('⚠️ Debe seleccionar la hora de fin');
                    return;
                }
                if (horario.HoraInicio >= horario.HoraFin) {
                    alert('⚠️ La hora de inicio debe ser menor que la hora de fin');
                    return;
                }

                const res = await fetch('/HorariosVeterinario/Guardar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(horario)
                });

                const json = await res.json();

                if (json.success) {
                    bsModal.hide();
                    fetchList();
                } else {
                    alert("❌ Error al guardar el horario");
                }
            });

            // ===========================
            // EVENTOS DE CAMBIO PARA RESUMEN
            // ===========================
            document.getElementById('IdVeterinario').addEventListener('change', actualizarResumen);
            document.getElementById('DiaSemana').addEventListener('change', actualizarResumen);
            document.getElementById('HoraInicio').addEventListener('change', actualizarResumen);
            document.getElementById('HoraFin').addEventListener('change', actualizarResumen);
            document.getElementById('Disponible').addEventListener('change', actualizarResumen);

            // ===========================
            // CARGA INICIAL
            // ===========================
            generarOpcionesHoras();
            fetchList();
        });
    </script>
}
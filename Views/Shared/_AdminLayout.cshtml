<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel Admin - ANIMORA</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Estilos personalizados -->
    <style>
        body {
            background: #f0f4f9;
            font-family: 'Segoe UI', sans-serif;
        }

        /* === SIDEBAR === */
        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            background: linear-gradient(180deg, #0d6efd, #003f9e);
            color: white;
            padding: 20px 0;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 25px;
            }

                .sidebar .logo img {
                    width: 120px;
                    filter: drop-shadow(0 0 3px rgba(255,255,255,0.5));
                }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 12px 25px;
                font-size: 16px;
                color: #e8f0fe;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: rgba(255,255,255,0.15);
                    color: #ffffff;
                    padding-left: 30px;
                }

        /* === HEADER SUPERIOR === */
        .admin-header {
            margin-left: 260px;
            background: #ffffff;
            padding: 15px 30px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .admin-header span {
                font-weight: 600;
                color: #444;
            }

        /* === CONTENIDO === */
        .admin-content {
            margin-left: 260px;
            padding: 35px;
            animation: fadeIn .3s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="logo">
            <img src="~/img/logo.png" alt="ANIMORA">
        </div>

        <a asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-chart-pie"></i> Dashboard</a>
        <a asp-controller="Usuario" asp-action="Index"><i class="fas fa-users"></i> Usuarios</a>
        <a asp-controller="Cliente" asp-action="Index"><i class="fas fa-user"></i> Clientes</a>
        <a asp-controller="Mascota" asp-action="Index"><i class="fas fa-paw"></i> Mascotas</a>
        <a asp-controller="Servicio" asp-action="Index"><i class="fas fa-list"></i> Servicios</a>
        <a asp-controller="Cita" asp-action="Index"><i class="fas fa-calendar-check"></i> Citas</a>
        <a asp-controller="Ticket" asp-action="Index"><i class="fas fa-file-invoice-dollar"></i> Tickets</a>
        <a asp-controller="Chatbot" asp-action="Index"><i class="fas fa-robot"></i> Chatbot</a>

        <hr style="border-color: rgba(255,255,255,0.3);" />

        <a asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
    </div>

    <!-- HEADER -->
    <div class="admin-header">
        <h4 class="m-0">Panel de Administración</h4>

        <div class="d-flex align-items-center">
            <i class="fas fa-user-circle fa-2x text-primary"></i>
            <span class="ms-2">Administrador</span>
        </div>
    </div>

    <!-- CONTENIDO -->
    <div class="admin-content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
